model genres {
  genre_id BigInt   @id @default(autoincrement())
  name     String   @unique
  movies   movies[]
}

model movies {
  movie_id        BigInt   @id @default(autoincrement())
  title           String
  production_date DateTime @db.Timestamptz(6)
  genres          genres[]
}
